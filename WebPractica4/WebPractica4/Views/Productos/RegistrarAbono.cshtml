<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/template/css/Form.css">
</head>
<body>
    @{
        @model IEnumerable<WebPractica4.Entities.ProductosEntidad>
        ViewBag.Title = "RegistrarAbono";
    }
    <section class="vh-90 bg-image" id="seccion">
        <div class="mask d-flex align-items-center h-100 gradient-custom-3">
            <div class="container h-100">
                <div class="row d-flex justify-content-center align-items-center">
                    <div class="col-12 col-md-8 col-lg-6">
                        <div class="card" style="border-radius: 15px;">
                            <div class="card-body p-4">
                                <h2 class="text-uppercase text-center mb-4">Registrar un Abono</h2>
                                @using (Html.BeginForm("Index", "Home", FormMethod.Post, new { @class = "form-horizontal", id = "citaForm" }))
                                {
                                    <table class="table table-bordered table-striped mx-auto">
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Id_Compra)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Descripcion)
                                                    </td>
                                                    <td>
                                                        <button type="button" onclick="ConsultarSaldo(this);" data-saldo="@item.Saldo" class="btn btn-secondary">Consultar Saldo</button>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>

                                    <div class="form-outline mb-3">
                                        <label class="form-label" for="form3Example1cg">Saldo Pendiente:</label>
                                        <input type="text" id="form3Example1cg" class="form-control form-control-lg" readonly />
                                    </div>

                                    <div class="form-outline mb-3">
                                        <label class="form-label" for="form3Example3cg">Dinero a Abonar:</label>
                                        <input type="number" id="form3Example3cg" class="form-control form-control-lg" />
                                    </div>

                                    <!-- Botón de Submit-->
                                    <div class="d-flex justify-content-center">
                                        <button onclick="return validarAbono();" type="submit" class="btn btn-success btn-block btn-lg gradient-custom-4 text-body">
                                            Abonar
                                        </button>
                                    </div>


                                }

                                <script>
                                    function ConsultarSaldo(button) {
                                        var saldo = button.getAttribute("data-saldo");
                                        document.getElementById("form3Example1cg").value = saldo;
                                    }

                                    function validarAbono() {
                                        var saldoPendiente = parseFloat(document.getElementById("form3Example1cg").value);
                                        var abono = parseFloat(document.getElementById("form3Example3cg").value);

                                        if (isNaN(abono) || abono < 0) {
                                            alert("Por favor, ingrese un monto de abono válido.");
                                            return false;
                                        }

                                        if (abono > saldoPendiente) {
                                            alert("El monto de abono no puede ser mayor que el saldo pendiente.");
                                            window.location.reload();
                                            return false;
                                        }
                                    }
                                </script>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>